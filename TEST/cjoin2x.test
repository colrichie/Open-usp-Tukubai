x C x A c nameAC x
x B y C _ _ x
x B z A a nameA1 x
x B z A b nameA2 x
FIN

${com} key=4@2 $tmp-master $tmp-tran > $tmp-ans
diff $tmp-ans $tmp-ok
[ $? -eq 0 ] ; ERROR_CHECK "TEST3 error"

###########################################
# 追加TEST1
# キーリストの重複解消試験

${com} key=4@2@2@4@4@2 $tmp-master $tmp-tran > $tmp-ans
diff $tmp-ans $tmp-ok
[ $? -eq 0 ] ; ERROR_CHECK "追加TEST1 error"
###########################################

rm -f $tmp-*
echo "${pythonversion} ${name}" OK

exit 0
