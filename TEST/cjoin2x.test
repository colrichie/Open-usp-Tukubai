x x A B nameAB x x
x x A A nameA1 x x
x x A A nameA2 x x
FIN

${com} key=3/4 $tmp-master $tmp-tran > $tmp-ans
diff $tmp-ans $tmp-ok
[ $? -eq 0 ] ; ERROR_CHECK "TEST2 error"

###########################################
# TEST3
# 離れたキーフィールドの場合(通常は使用しません)

cat << FIN > $tmp-master
