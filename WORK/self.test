#!/usr/local/bin/bash -xv
#
# test script of self 
#
# usage: ./self.test <python ver>

tmp=/tmp/$$

dir=$(dirname $0)/..
cd $dir

scr=./WORK/self.new
com="$1 ${scr}"
[ "$1" = "" ] && com="./WORK/self.new"

ERROR_CHECK(){
	[ "$(echo ${PIPESTATUS[@]} | tr -d ' 0')" = "" ] && return

	echo $1
	echo "$com" NG
	rm -f $tmp-*
	exit 1
}

