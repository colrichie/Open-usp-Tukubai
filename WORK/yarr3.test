#!/usr/local/bin/bash -xv
#
# test script of yarr 
#
# usage: ./yarr.test <python ver>

tmp=/tmp/$$

dir=$(dirname $0)/..
cd $dir

scr=./WORK/yarr3
com="$1 ${scr}"
[ "$1" = "" ] && com=./WORK/yarr3

ERROR_CHECK(){
	[ "$(echo ${PIPESTATUS[@]} | tr -d ' 0')" = "" ] && return

	echo $1
	rm -f $tmp-*
	exit 1
}

###########################################
#TEST1: no option use

cat << FIN > $tmp-in
山田
山本
田中
FIN

cat << FIN > $tmp-out
山田 山本 田中
FIN

${com} $tmp-in > $tmp-ans
diff $tmp-ans $tmp-out
[ $? -eq 0 ] ; ERROR_CHECK "TEST1 error"

###########################################
#TEST2: use of num

cat << FIN > $tmp-in
001 山田
001 山本
002 田中
FIN

cat << FIN > $tmp-out
001 山田 山本
002 田中
FIN

${com} num=1 $tmp-in > $tmp-ans
diff $tmp-ans $tmp-out
[ $? -eq 0 ] ; ERROR_CHECK "TEST2 error"

###########################################
#TEST3: use of option num=<n> and -<m>

cat << FIN > $tmp-in
001 山田
001 山本
001 武田
002 田中
002 中
FIN

cat << FIN > $tmp-out
001 山田 山本
001 武田
002 田中 中
FIN

#1:input from file
${com} num=1 -2 $tmp-in > $tmp-ans
diff $tmp-ans $tmp-out
[ $? -eq 0 ] ; ERROR_CHECK "TEST2-1 error"

#2:input from stdin
cat $tmp-in		|
${com} num=1 -2 - > $tmp-ans
diff $tmp-ans $tmp-out
[ $? -eq 0 ] ; ERROR_CHECK "TEST2-2 error"


rm -f $tmp-*
echo "${com}" OK
exit 0
